{
  "name": "libperfumery",
  "version": "0.0.2",
  "description": "An open source library for perfumery ingredients with a local database and utility functions.",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc --build && tsc-alias",
    "normalize": "yarn build &&  node ./dist/scripts/renormalize.js",
    "scrapePA": "yarn build &&  node ./dist/scripts/scrape.js",
    "scrapePW": "yarn build &&  node ./dist/scripts/scrapePellwall.js",
    "scrapeIFRA": "yarn build &&  node ./dist/scripts/scrapeIFRAStdLib.js",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/C5H8NNaO4/libperfumery.git"
  },
  "author": "Moritz Roessler",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/C5H8NNaO4/libperfumery/issues"
  },
  "homepage": "https://github.com/C5H8NNaO4/libperfumery#readme",
  "dependencies": {
    "@types/node": "^22.13.5",
    "clsx": "^2.1.1",
    "copyfiles": "^2.4.1",
    "fast-levenshtein": "^3.0.0",
    "tsc-alias": "^1.8.11",
    "typescript": "^5.7.3",
    "playwright": "^1.50.1"
  }
}
